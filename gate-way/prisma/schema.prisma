generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userName String @db.String
  password String @db.String
  email String @db.String
  phone String @db.String
  createDate String? @db.String
  updateDate String? @db.String
  deleteDate String? @db.String
  isActive Boolean @db.Bool @default(false)
  rules Rules @default(Guest)
}
enum Rules {
  Guest
  Base
  User
  Viewer
  Admin
  Accountant
  Manager
  Security
  Inspector
}